    "version": "0.2.0",
    "configurations": [
        {
            "name": "Linux (gdb) Launch SFMLProject",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/SFMLProject/bin/Debug-linux-x86_64/SFMLProject/SFMLProject",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/SFMLProject",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Linux Make",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "Windows (debug) Launch SFMLProject",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/SFMLProject/bin/Debug-linux-x86_64/SFMLProject/SFMLProject.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/SFMLProject",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "Linux (gdb) Launch OpenGLProject",
